<html>
<head>
    <title>Home</title>
    <link rel="stylesheet" href="navbar.css">
<style>
* {
  box-sizing: border-box;
}


.header {
  text-align: center;
  font-size: 16px;
  
  color: rgb(36, 28, 28);;
  /* background-color: #07aa35; */
  padding: 5px;
}

.searchbar {
  display: flex;
  justify-content: center;
  margin: 20px;
}

.searchbar input {
  width: 40%;
  height: 40px;
  border: 1px solid #cccccc;
  padding: 10px;
}

.searchbar button {
  width: 10%;
  height: 40px;
  border: none;
  background-color: #333333;
  color: white;
}

.line {
  width: 100%;
  height: 2px;
  background-color: black;
}

.title {
  text-align: center;
  font-size: 24px;
  font-weight: bold;
  margin: 20px;
}

.card-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin: 20px;
}

.card {
  width: 20%;
  height: 300px;
  /* border: 2px solid black; */ /* removed the border */
  display: flex;
  flex-direction: column;
  margin: 30px;
  align-items: center;
  box-shadow: 5px 5px 10px #888888; /* added the box shadow */
}

.card img {
  width: 90%;
  height: 80%;
  object-fit: cover;
}

.card h3 {
  width: 90%;
  height: 20%;
  text-align: center;
  margin: 0;
}
</style>
</head>
<body>
    <%- include('./components/navbar') %>

<div class="header">
  <!-- <h1>Subha Yatra</h1> -->
  <h1>Let's Begin The Journey</h1>
</div>
<div class="searchbar">
<form action="/plan" method="post">
 <div style="width: 800px;">
    <input type="text" style="width: 300px;" id="inputSearch" name="from"  placeholder="Where are you...">
    <input type="text" style="width: 300px;" id="inputSearch" name="to"  placeholder="Where you wanna go...">
  
 </div>
    <br>
  <% if(currentUser){ %>
    <label for="startDate">Start Date</label>
    <input type="date" name="startDate" id="startDate">
    <label for="endDate">End Date</label>

    <input type="date" name="endDate" id="endDate"><br>
  <div >
    <input type="checkbox" style="height: 20;" id="vehicle3" name="history" value="true">
    <label for="vehicle2" style="margin-left: -150px;">Add to trip</label>
  </div>

 <% } %>
    <button type="submit">Search</button>
    

</form>
</div>
<div class="line"></div>
<div class="title">
  <h2>TOP PLACES OF NEPAL</h2>
</div>



</div>

 

<script>
  function handleSearch(){
    const input = document.getElementById('inputSearch').value.toLowerCase();
    const cards = document.querySelectorAll('.card');
    
    cards.forEach(card => {
      const title = card.querySelector('h3').textContent.toLowerCase();
      const address = card.querySelector('p').textContent.toLowerCase();

      if(title.includes(input) || address.includes(input)) {
        card.style.display = "block";
      } else {
        card.style.display = "none";
      }
    });
  }
</script>
</body>
</html>
